<Window x:Class="NotesApp.View.NoteListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesApp.View"
        xmlns:model="clr-namespace:NotesApp.Model"
        xmlns:viewModel="clr-namespace:NotesApp.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="NoteListView" Height="800" Width="400">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="10" CornerRadius="5" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="0" Background="#242424">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" 
                Background="Transparent" 
                MouseLeftButtonDown="DragBar_MouseLeftButtonDown"/>

                <Button Grid.Column="0" 
                Background="Transparent" 
                Foreground="Gray"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                Content="＋" 
                FontSize="30" 
                Margin="0 -6 0 0"
                Padding="2 0 0 0"
                BorderThickness="0,0,0,0"
                Command="{Binding CreateNoteCommand}"/>
                <Button Grid.Column="2" 
                Background="Transparent" 
                Foreground="Gray"
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                Content="⋯" 
                FontSize="30"
                Margin="5 -8.5 0 0"
                Padding="4 0 4 0"
                BorderThickness="0,0,0,0"
                Command="{Binding OpenNoteMenuCommand}"/>
                <Button Grid.Column="3" 
                Background="Transparent" 
                Foreground="Gray"
                VerticalAlignment="Stretch" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                Content="×" 
                FontSize="30" 
                Padding="4 0 6 0"
                Margin="0 -8.5 0 0"
                BorderThickness="0,0,0,0"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding}"/>
            </Grid>
                
                <TextBlock Grid.Row ="1" 
                           Foreground="White" 
                           Text="Notes"
                           FontSize="22"
                           FontWeight="DemiBold"
                           Margin="10 5 0 0"/>
                
                <Grid Grid.Row="2" Margin="10 5 10 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             BorderThickness="0"
                             Text="Search..."
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Left"
                             Padding="10 0 0 0 "
                             Background="#404040"
                             Foreground="#b5b5b5"/>
                    <Button Grid.Column="1"
                            Margin="0"
                            BorderThickness="0"
                            Content="🔍︎"
                            FontSize="18"
                            Background="#404040"/>
                </Grid>

                <Grid Grid.Row="3" Margin="10, 5, 10, 0">
                    <ItemsControl ItemsSource="{Binding ShortNoteViewModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModel:ShortNoteViewModel}">
                                <local:ShortNoteView Margin="0, 10, 0, 0"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
            
        </ScrollViewer>
    </Border>
</Window>
