<UserControl x:Class="NotesApp.View.NoteMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             Height="100" Width="300"
             MinHeight="100" MinWidth="200"
             MaxHeight="100" MaxWidth="300"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Background="{StaticResource NoteBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="33"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" 
                   Fill="LightSkyBlue"/>
        <Button Grid.Row="1"
                Style="{StaticResource LightDefaultButton}"
                Content="Note List"
                HorizontalContentAlignment="Left"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Padding="10 0 0 0"
                FontSize="20"
                Foreground="White"
                Command="{Binding OpenNoteListCommand}"/>
        <Button Grid.Row="2"
                Style="{StaticResource LightDefaultButton}"
                Content="Delete Note"
                HorizontalContentAlignment="Left"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Padding="10 0 0 0"
                FontSize="20"
                Foreground="White"
                Command="{Binding DeleteNoteCommand}"
                CommandParameter="{Binding Note}"/>
    </Grid>
</UserControl>
