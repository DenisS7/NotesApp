<Window x:Class="NotesApp.View.NoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View"
             xmlns:misc="clr-namespace:NotesApp.Misc"
             mc:Ignorable="d" 
             WindowStyle="none"
             Height="300" Width="300"
             MinHeight="100" MinWidth="175">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="10" CornerRadius="5" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Border CornerRadius="0" Background="{StaticResource NoteBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Row="0" Fill="LightSkyBlue" RadiusX="0" RadiusY="0"></Rectangle>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" 
                        Background="Transparent" 
                        MouseLeftButtonDown="DragBar_MouseLeftButtonDown"/>

                <Button Grid.Column="0" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="＋" 
                        FontSize="30" 
                        Margin="0 -6 0 0"
                        Padding="2 0 0 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding CreateNoteCommand}"/>
                <Button Grid.Column="2" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="⋯" 
                        FontSize="30"
                        Margin="5 -8.5 0 0"
                        Padding="4 0 4 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding OpenNoteMenuCommand}"/>
                <Button Grid.Column="3" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch" 
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="×" 
                        FontSize="30" 
                        Padding="4 0 6 0"
                        Margin="0 -8.5 0 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding CloseCommand}"
                        CommandParameter="{Binding}"/>
            </Grid>
            <RichTextBox misc:RichTextBoxUtility.Text="{Binding NoteText, Mode=TwoWay}"
                         Grid.Row="1"
                         Background="Transparent" 
                         Margin="5" 
                         BorderThickness="0" 
                         FontSize="15" 
                         Foreground="White"
                         CaretBrush="White"
                         HorizontalScrollBarVisibility="Disabled"/>

            <Border Grid.Row="0" 
                    Grid.RowSpan="2" 
                    x:Name="OverlayMenu" 
                    Background="{StaticResource DisabledShadeBrush}"
                    Visibility="{Binding IsMenuVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
                <Border.InputBindings>
                    <MouseBinding Command="{Binding CloseNoteMenuCommand}" 
                                  MouseAction="LeftClick"/>
                </Border.InputBindings>
                <local:NoteMenu/>
            </Border>
        </Grid>

    </Border>
</Window>
