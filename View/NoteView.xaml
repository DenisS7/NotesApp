<UserControl x:Class="NotesApp.View.NoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="0"
            Background="#383838">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Row="0" Fill="LightSkyBlue" RadiusX="0" RadiusY="0"></Rectangle>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="＋" 
                        FontSize="30" 
                        Margin="0 -6 0 0"
                        Padding="2 0 0 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding CreateNoteCommand}"/>
                <Button Grid.Column="2" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="⋯" 
                        FontSize="30"
                        Margin="5 -8.5 0 0"
                        Padding="4 0 4 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding OpenNoteMenuCommand}"/>
                <Button Grid.Column="3" 
                        Background="Transparent" 
                        VerticalAlignment="Stretch" 
                        HorizontalContentAlignment="Center" 
                        VerticalContentAlignment="Center" 
                        Content="×" 
                        FontSize="30" 
                        Padding="4 0 6 0"
                        Margin="0 -8.5 0 0"
                        BorderThickness="0,0,0,0"
                        Command="{Binding CloseCommand}"/>
            </Grid>
            <TextBox Grid.Row="1" 
                     Background="Transparent" 
                     Margin="5" 
                     BorderThickness="0" 
                     FontSize="15" 
                     Foreground="White"
                     CaretBrush="White"
                     TextWrapping="Wrap"
                     Text="{Binding NoteText, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

    </Border>
</UserControl>
