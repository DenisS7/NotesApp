<UserControl x:Class="NotesApp.View.ShortNoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotesApp.View"
             xmlns:converters="clr-namespace:NotesApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300"
             MinHeight="0">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter"/>

        <Style TargetType="Button" x:Key="NoMouseHoverButtonStyle">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                BorderThickness="0"
                                BorderBrush="Transparent" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ContentPresenter" 
                                              Opacity="0.5"
                                              TextElement.FontSize="{TemplateBinding FontSize}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                <Setter TargetName="ContentPresenter" Property="Opacity" Value="1.0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="5" 
        BorderThickness="0"
        BorderBrush="Transparent"
        Background="#383838">
        <Border.InputBindings>
            <MouseBinding Command="{Binding OpenNoteCommand}"
                          MouseAction="LeftDoubleClick"/>
        </Border.InputBindings>
        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border CornerRadius="4" Height="150" Width="300" Background="White"/>
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>

        <Border BorderThickness="0" 
                BorderBrush="Transparent">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#10FFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Rectangle Grid.Row="0" 
                           Fill="LightBlue" Grid.ColumnSpan="2"/>

                <TextBlock Grid.Row="1" 
                           x:Name="DateText"
                           Text="{Binding LastUpdateDate, StringFormat={}{0:dd/MM/yy}}"
                           FontSize="10"
                           Foreground="LightSkyBlue"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Visibility="{Binding IsMouseOver,
                                        RelativeSource={RelativeSource AncestorType=Border},
                                        Converter={StaticResource InvertBooleanToVisibilityConverter}}"
                           Margin="0 5 10 0"/>

                <Button Grid.Row="1"
                        Style="{StaticResource NoMouseHoverButtonStyle}"
                        x:Name="OptionsButton"
                        Content="⋯"
                        FontSize="20"
                        Padding="0 -5 0 0"
                        VerticalContentAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Visibility="{Binding IsMouseOver,
                                    RelativeSource={RelativeSource AncestorType=Border},
                                    Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0 0 10 0"
                        Foreground="White"
                        BorderThickness="0"
                        BorderBrush="Transparent"/>

                <TextBlock Grid.Row="2"
                           Margin="10,5,10,10"
                           Text="{Binding NoteText}" 
                           FontSize="13"
                           Foreground="White"
                           TextWrapping="Wrap"
                           FontWeight="DemiBold"
                           TextTrimming="CharacterEllipsis"
                           MaxHeight="150"/>
            </Grid>
        </Border>
    </Border>
</UserControl>
